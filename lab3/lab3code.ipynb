import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Set visual style
sns.set_theme(style="whitegrid")

df = pd.read_csv('KFC_Past_Sales_Dataset.csv')
df.head()

print('Missing values:\n', df.isna().sum())
print('\nNumber of duplicate rows:', df.duplicated().sum())

month_map = {
    'Jan': 1, 'Feb': 2, 'Mar': 3, 'Apr': 4, 'May': 5, 'Jun': 6,
    'Jul': 7, 'Aug': 8, 'Sep': 9, 'Oct': 10, 'Nov': 11, 'Dec': 12
}
df['Month_Num'] = df['Month'].map(month_map)

# Convert to datetime format
df['Date'] = pd.to_datetime(pd.DataFrame({
    'year': df['Year'],
    'month': df['Month_Num'],
    'day': 1
}))

df.info()

df.describe(include='all')

plt.figure(figsize=(12,5))

plt.subplot(1, 2, 1)
sns.histplot(df['Customers'], bins=20, kde=True, color='red')
plt.title('Distribution of Customers')

plt.subplot(1, 2, 2)
sns.histplot(df['Sales'], bins=20, kde=True, color='darkred')
plt.title('Distribution of Sales')

plt.show()

country_sales = df.groupby('Country')['Sales'].sum().sort_values(ascending=False)

plt.figure(figsize=(10,5))
country_sales.plot(kind='bar', color='firebrick')
plt.title('Total Sales by Country')
plt.ylabel('Total Sales')
plt.xticks(rotation=45)
plt.show()

plt.figure(figsize=(8,6))
sns.heatmap(df[['Customers', 'Sales', 'Marketing_Spend']].corr(), annot=True, cmap='Reds')
plt.title('Correlation Matrix')
plt.show()

df_trend = df.groupby('Date')['Sales'].sum().reset_index()

plt.figure(figsize=(12,6))
plt.plot(df_trend['Date'], df_trend['Sales'], color='red')
plt.title('Monthly Sales Trend Over Time')
plt.xlabel('Year')
plt.ylabel('Total Sales')
plt.show()
